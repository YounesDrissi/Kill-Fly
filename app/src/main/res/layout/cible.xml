<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/ver_img">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_max_width"
        android:id="@+id/cible22Fin"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/cible22fin" />

    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/reticule_client"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/reticuleronde"
        android:layout_weight="0.02" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="513dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enregistrer"
            android:background="@drawable/button_bg_disabled"
            android:text="@string/enregistrer"
            android:textColor="@color/windowBackground"
            android:textStyle="normal"
            android:layout_below="@+id/intensite"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IntensitÃ© : 0"
            android:textStyle="bold"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:id="@+id/intensite"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/enregistrer"
            android:layout_toStartOf="@+id/enregistrer"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction : 0"
            android:textStyle="bold"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:id="@+id/direction"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/enregistrer"
            android:layout_toEndOf="@+id/enregistrer"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</LinearLayout>